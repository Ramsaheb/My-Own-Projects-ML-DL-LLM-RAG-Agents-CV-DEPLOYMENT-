{
  "manifest_version": 3,
  "name": "Fake News Detector",
  "version": "1.1",
  "description": "Detects fake news using AI by analyzing selected text and images.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "http://backend:8000/*",
    "https://*/*"  
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}